<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_trade_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:src="@drawable/icon_credit_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trade_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:text="@string/trade_history"
        android:textAppearance="@style/trade_store"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_trade_store"
        app:layout_constraintStart_toEndOf="@+id/iv_trade_store"
        app:layout_constraintTop_toTopOf="@+id/iv_trade_store" />

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_trade_store"
        app:layout_constraintBottom_toBottomOf="@id/iv_trade_store"/>

</androidx.constraintlayout.widget.ConstraintLayout>