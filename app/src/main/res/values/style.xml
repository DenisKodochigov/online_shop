        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#5B5B5B</item>
    </style>
    <style name="home_text_icon" parent="style_app">
        <item name="android:layout_marginTop">11dp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">8sp</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">#A6A7AB</item>
    </style>
    <style name="home_latest_deal" parent="style_app">
